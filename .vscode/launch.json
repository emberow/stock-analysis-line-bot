  "version": "0.2.0",
  "configurations": [
    {
      "name": "backend",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/ts-node-dev",
      "runtimeArgs": ["-r", "tsconfig-paths/register"],
      "args": ["${workspaceRoot}/index.ts"],
      "restart": true,
      "env": { "NODE_ENV": "dev" },
      "console": "integratedTerminal",
    }
  ]
}